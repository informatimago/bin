                                     (:WHITE          ,+WHITE+)
                                     (:CYAN           ,+CYAN+)
                                     (:MAGENTA        ,+MAGENTA+)
                                     (:BLUE           ,+BLUE+)
                                     (:YELLOW         ,+YELLOW+)
                                     (:GREEN          ,+GREEN+)
                                     (:RED            ,+RED+)
                                     (:BLACK          ,+BLACK+)
                                     (:NO-INVERT      ,+NO-INVERT+)
                                     (:NO-BLINK       ,+NO-BLINK+)
                                     (:NO-UNDERLINE   ,+NO-UNDERLINE+)
                                     (:NO-BOLD        ,+NO-BOLD+)
                                     (:INVERT         ,+INVERT+)
                                     (:BLINK          ,+BLINK+)
                                     (:UNDERLINE      ,+UNDERLINE+)
                                     (:BOLD           ,+BOLD+)
                                     (:NORMAL         ,+NORMAL+))))) 
                  attribs))) ;;attron

