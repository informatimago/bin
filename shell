  (format t "~C" ch))


(defparameter +reset+
  (format nil "~{~A~}"
          (list +CLEAR-SCREEN+ +BLACK-BACK+ +CYAN+ +BOLD+ +ISO6429-ED+)))


(defun reset (params)
  (format t "~A~{~A~}~A" 
          +clear-screen+
          (mapcar (lambda (p) (eval (intern (format nil "+~A+" p)))) params)
          +iso6429-ed+)) ;;reset


(defstruct (shell (:type list)) reset screen function)


