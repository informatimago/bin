line="------------------------------------------------------------------------"
for f ; do
    p=$(echo "$f" | sed -e 's/././g')
    echo "$line"|sed -e "s/^\(....\).\(${p}\).\(.*\)/\1 ${f} \3/"
    cat $f
done
echo $line
#### THE END ####

