#!/bin/bash
xset -dpms
xsetroot -solid '#137'
case "$1" in
(minint)
    xterm -fg green -bg black -fn terminus-32  -e screen    & disown
    emacs & disown
    (sleep 30 ; thunderbird >/tmp/thunderbird-${UID}-$$.log & disown) &
    (sleep 50 ; firefox     >/tmp/firefox-${UID}-$$.log     & disown) &
    ;;
(*)
    pjb-xterm green -e screen & disown
    (sleep 10 ; emacsen ) & disown
    (sleep 50 ; firefox >/tmp/firefox-${UID}-$$.log & disown) &
    ;;
esac
